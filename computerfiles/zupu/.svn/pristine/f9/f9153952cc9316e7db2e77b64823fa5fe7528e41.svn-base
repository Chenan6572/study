* {
	margin: 0;
}

.title {
	background: rgba(231, 64, 58, 1);
}
.back{
	background: rgba(242, 242, 242, 1);
}


.up_content{
	width: 100%;
	padding: 0.5rem 1rem;
}

.txt_tips {
	margin-top: 1rem;
}

.txt_tips img {
	width: 2rem;
	height: 2rem;
	margin-left: 0.5rem;
}

.txt_tips span {
	height:2rem;
	line-height:2rem;
	font-size:1.7rem;
}

.inputs {
	margin-top: 0.2rem;
	margin-bottom:1rem;
	width: 100%;
	height: 3.5rem;
	border: 1px solid rgba(243, 146, 146, 0.5);
	padding: 0rem 2rem 0rem 2rem;
	background-color: white;
	display:flex;
	justify-content:space-between;
	align-items:center;
	
}

.name_inputs {
	font-size: 1.5rem;
}

input {
	height: 3rem;
	width:10rem;
	border: none;
	outline: none;
	font-size: 1.5rem;
}
