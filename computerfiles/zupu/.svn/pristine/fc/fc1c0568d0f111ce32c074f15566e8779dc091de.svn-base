.main_imgs{
    width: 100%;
    text-align: center;
    height: 1%;
    padding: 8% 1rem 0 1rem;
}
.up_content img{
    width: 20%;
}
.up_content span{
   display: block;
   margin-top:1.5rem;
}
.middle_content{
    height: 12rem;
    /* border: 1px solid green; */
    padding: 0.3rem 0;
    text-align: center;
    margin: 0 auto;
}
.middle_content_img{
    width: 10%;
    float: left;
    margin-top: 1rem;

}
.middle_content_right{
    width: 80%;
    height: 100%;
    float: left;  
}

.middle_content_img img{
    margin-top: 0.3rem;
    width: 1.5rem;
    height: 2.2rem;
}
.middle_content_right span{
    font-size: 2rem;
    margin-left: -0.5rem;
}
.middle_content_right input{
    margin-left: 1rem;
    border: none;
    outline: none;
    font-size: 1.5rem;
    margin-top: 0.5rem;
}
.middle_content_right .tips{
    margin-left: 0.5rem;
    text-align: center;
    margin-top: 1rem;
    float: left;
}
.middle_content_second_right .tips{
    text-align: center;
    margin-top: 1rem;
    margin-left: 1.2rem;
    float: left;
}
.inputs{
    text-align: center;
    width: 12rem;
    float: left;
    margin-top: 0.8rem;
    margin-left: -0.8rem;
}
.rights_inputs{
    text-align: center;
    width: 12rem;
    float: left;
    margin-top: 0.8rem;
    margin-left: 1rem;
}
.middle_content_first,
.middle_content_second{
    border-bottom: 1px solid #DCDCDC;
    width: 100%;
    margin-top:1rem; 
    height: 5rem;
    padding: 0.5rem;
}
.middle_content_second_imgs{
    float: left;
    margin: 0.5rem;
    width: 10%;
}
.middle_content_img img{
    padding: 0;
    width: 1.5rem;
    height: 2rem;
}
.middle_content_second_right{
    width: 90%;
    height: 100%;
    float: left;  
}
.middle_content_second_right span{
    font-size: 2rem;
    margin-left: -1rem;
}
.middle_content_second_right input{
    margin-left: -2rem;
    width: 100%;
    border: none;
    outline: none;
    font-size: 1.5rem;
    margin-top: 0.5rem;
}
.yzm{
    background-color:rgba(231, 64, 58, 1);
    width: 30%;
    height: 3rem;
    line-height: 3rem;
    float: left;
    font-size: 1.5rem;
    color: white;
    text-align: center;
    border-radius: 5rem;
    margin-top: 0.5rem;
    margin-left:-1.5rem;
    
}
.message{
    margin-top: 1rem;
}
.down_content{
    width: 100%;
    margin-top: 5rem;
}
.btnlog{
    width: 80%;
    height: 3rem;
    background-color:rgba(231, 64, 58, 1);
    border-radius: 2rem;
    font-size: 1.5rem;
    text-align: center;
    color: white;
    line-height: 3rem;
    margin: 0 auto;
}
.pwd_btnlog{
    margin-top: 1rem;
    text-align: center;
    color: black;
}
.agree{
    display: flex;
    justify-content:center;
    position: relative;
    margin-top: 14rem;
    width: 100%;
}
a{
    color: red;
}

