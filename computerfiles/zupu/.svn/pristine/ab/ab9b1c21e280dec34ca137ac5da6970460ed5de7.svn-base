.content{
	padding-top: 1.5rem;
}
.all_list_all {
    width: 100%;
    height: 5rem;
    border-bottom: 1px solid rgba(215, 215, 215, 1);
    background: white;
}

.all_list_left {
    width: 25%;
    height: 5rem;
    line-height: 5rem;
    text-align: left;
    font-size: 1.5rem;
    float: left;
    color: black;
    direction: ltr;
    margin-left: 1.3rem;
}

.all_list_right {

    width: 70%;
    height: 5rem;
    float: right;
}

.all_list_right input {
    border: none;
    outline: none;
    font-size: 1.5rem;
    text-align: right;
    margin-right: 2rem;
    direction: ltr;
    margin-top: 1.5rem;
    height: 2rem;
    width: 80%;
    float: right;
}

.btns {
    width: 70%;
    height: 4rem;
    line-height: 4rem;
    color: azure;
    font-size: 2rem;
    text-align: center;
    margin: 5rem auto;
    background-color: rgba(231, 64, 58, 1);
    border-radius: 10rem;
}