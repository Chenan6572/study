* {
	margin: 0;
}

.title {
	background: rgba(231, 64, 58, 1);
}
.back{
	background: rgba(242, 242, 242, 1);
}


.up_content{
	width: 100%;
	padding: 0.5rem 1rem;
}

.txt_tips {
	margin-top: 1rem;
	margin-bottom:1rem;
}

.txt_tips img {
	width: 1.5rem;
	height: 1.5rem;
	margin-left: 0.5rem;
}

.txt_tips span {
	height:1.5rem;
	line-height:1.5rem;
	font-size:1.5rem;
}

.inputs {
	margin-top: 0.2rem;
	margin-bottom:1rem;
	width: 100%;
	height: 3.5rem;	
	padding: 0rem 2rem 0rem 2rem;
	background-color: white;
	display:flex;
	justify-content:space-between;
	align-items:center;
	
}
.inputs:hover{
	border: 1px solid rgba(243, 146, 146, 0.5);
}
.name_inputs {
	font-size: 1.6rem;
	width:5rem;
}

input {
	height: 3rem;
	width:18rem;
	border: none;
	outline: none;
	font-size: 1.5rem;
}
.middle{
	height:6.6rem;
	margin-bottom:1rem;
	display:flex;
	justify-content:space-around;
	align-items:center;
}
.certificates{
	height:6.6rem;
	width:11rem;
	background:white;
	border-radius:0.5rem;
	border:1px dashed rgba(242, 242, 242, 1);
}
.material{
	width: 100%;
	height:60rem;
	padding: 0.5rem 1rem;
}
.material_word{
	border:1px dashed rgba(243, 146, 146, 1);
	width:20rem;
	height:24rem;
	margin:0 auto;
	text-align:center;
	background:white;
	border-radius:0.5rem;
}