* {
	margin: 0;
}

.title {
	background: rgba(231, 64, 58, 1);
}

.list_container {
	height: 11rem;
	display: flex;
	align-items: center;
	justify-content: center;
	border-bottom: 0.5rem solid #f2f2f2;
}

.media_cont {
	margin-left: 1.5rem;
	width: 15rem;
	height: 10rem;
	line-height: 2.3rem;
	flex-grow: 3;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
}

span {
	font-size: 1.35rem;
}

.media_img {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 4.5rem;
	height: 4.5rem;
}

.image_ {
	width: 100%;
	height: 100%;
}

.media_state {
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	width: 7rem;
	line-height: 1.1rem;
	flex-grow: 2;
}

a {
	font-size: 1.25rem;
}