.main_content{
    padding: 10rem 2rem 0 2rem;
}
.content{
   border-bottom: 1px solid rgba(242, 242, 242, 1);
    width: 100%;
    height: 5rem;
    padding: 1rem ;
}
img{
    width: 1.8rem;
    height: 1.8rem;
    float: left;
    display: block;
    margin-top: 0.5rem;
}
.spans{
    margin-top: 0.5rem;
    float: left;
    margin-left: 0.5rem;
}
span{
    font-size: 1.5rem;
    margin-top: 0.2rem;
}
input{ 
    border: none;
    outline: none;
    width: 80%;
    font-size: 1.5rem;
    margin-top: 0.6rem;
}
.inputs{
    width: 70%;
    float: left;
    font-size: 1.5rem;
    padding-bottom: 1rem;
    height: 3rem;
    margin-left:1.5rem;
    margin-top: -0.2rem;
}
.inputs:hover {
    border: 1px solid rgba(231, 64, 58, 1);
    box-shadow: 3px 3px 5px rgba(255, 215, 215, 1);
}
.btnbind{
    height: 4rem;
    background-color: rgba(231, 64, 58, 1);
    font-size: 2rem;
    color: white;
    text-align: center;
    border-radius: 2rem;
    line-height: 4rem;
    margin-top: 5rem;
}
.agree{
    display: flex;
    justify-content:center;
    position: relative;
    margin-top: 14rem;
    width: 100%;
}
a{
    color: red;
}