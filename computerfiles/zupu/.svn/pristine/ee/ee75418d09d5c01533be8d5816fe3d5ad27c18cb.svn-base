<?xml version="1.0" encoding="utf-8"?>

<div xmlns="http://www.w3.org/1999/xhtml" component="$UI/system/components/justep/window/window" design="device:m;"
  xid="window" class="window">  
  <div component="$UI/system/components/justep/model/model" xid="model" style="height:auto;width:188px;top:258px;left:174px;"
    onLoad="modelLoad"> 
    <div component="$UI/system/components/justep/data/baasData" autoLoad="true"
      xid="baasData1" queryAction="queryUserbindinfo" saveAction="saveUserbindinfo"
      url="/zupu/UserBindInfo" tableName="userbindinfo" idColumn="UserID"> 
      <column label="用户ID" name="UserID" type="Integer" xid="default1"/>  
      <column label="用户真实姓名" name="Name" type="String" xid="default2"/>  
      <column label="身份证号" name="IDNum" type="String" xid="default3"/>  
      <column label="头像路径" name="Pic" type="String" xid="default4"/> 
    </div> 
  </div>  
  <div component="$UI/system/components/justep/panel/panel" class="x-panel x-full"
    xid="panel1"> 
    <div class="x-panel-top" xid="top1"> 
      <div component="$UI/system/components/justep/titleBar/titleBar" title="身份绑定"
        class="x-titlebar" style="background-color:#FF0000;"> 
        <div class="x-titlebar-left"> 
          <a component="$UI/system/components/justep/button/button" label=""
            class="btn btn-link btn-only-icon" icon="icon-chevron-left" onClick="{operation:'window.close'}"
            xid="backBtn"> 
            <i class="icon-chevron-left"/>  
            <span/> 
          </a> 
        </div>  
        <div class="x-titlebar-title">身份绑定</div>  
        <div class="x-titlebar-right reverse"/> 
      </div> 
    </div>  
    <div class="x-panel-content" xid="content1"> 
      <div style="margin-left:20px;margin-right:20px;margin-top:80px;text-align:center"> 
        <div component="$UI/system/components/justep/labelEdit/labelEdit" class="x-label-edit x-label30"
          xid="labelEdit1"> 
          <img src="$UI/zupu/img/name.png" alt="" xid="image1" height="30px"
            style="width:30px;"/>  
          <label class="x-label" xid="label1" style="font-family:微软雅黑;width:70px;margin-left:8px"> <![CDATA[姓 名：]]> </label>  
          <input component="$UI/system/components/justep/input/input" class="form-control text-primary x-edit" id="name"
            xid="input1" bind-value="&quot;&quot;" style="font-family:微软雅黑;border:none；outline:none" placeHolder="请输入真实姓名"/> 
            
            <!-- <input type="text" style="float:left;border:none;outline:none;padding:4px 0;" class="form-control text-primary x-edit"
                component="$UI/system/components/justep/input/input" xid="input1" placeHolder="请输入手机号" maxLength="11"
                dataType="String" bind-value="&quot;&quot;" /> -->
        </div>  
        <hr xid="hr1" style="margin-top:5px"/>  
        <div component="$UI/system/components/justep/labelEdit/labelEdit" class="x-label-edit x-label30"
          xid="labelEdit4"> 
          <img src="$UI/zupu/img/idcard.png" alt="" xid="image2" height="30px"
            style="width:30px;"/>  
          <label class="x-label" xid="label4" style="font-family:微软雅黑;width:70px;margin-left:8px"> <![CDATA[身份证：]]> </label>  
          <input component="$UI/system/components/justep/input/input" class="form-control x-edit" id="idcard"
            xid="input2" bind-value="&quot;&quot;" style="border:none;outline:none;"
            placeHolder="请输入身份证号"/> 
        </div>  
        <hr xid="hr2" style="margin-top:5px"/>  
        <div component="$UI/system/components/bootstrap/row/row" class="row"
          xid="row1"> 
          <div class="col col-xs-12" xid="col2"> 
            <a component="$UI/system/components/justep/button/button" class="btn x-red btn-icon-left"
              label="绑 定" xid="bind" style="border-radius:50px;width:80%;height:4rem;font-size:1.6rem;margin-top:3rem;"
              onClick="bindClick"> 
              <span xid="span1">绑 定</span> 
            </a> 
          </div> 
        </div> 
      </div> 
    </div> 
  </div> 
</div>
