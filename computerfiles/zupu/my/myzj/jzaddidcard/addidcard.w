<?xml version="1.0" encoding="utf-8"?>
<div
    xmlns="http://www.w3.org/1999/xhtml" component="$UI/system/components/justep/window/window" design="device:m;" xid="window"
  class="window">
    <div component="$UI/system/components/justep/model/model" xid="model" style="left:18px;top:83px;height:244px;"></div>
    <div component="$UI/system/components/justep/panel/panel" class="x-panel x-full" style="background-color:rgba(242, 242, 242, 1)"
    xid="panel1">
        <div class="x-panel-top" xid="top1">
            <div component="$UI/system/components/justep/titleBar/titleBar" title="添加身份证" style="background-color:rgba(231, 64, 58, 1)"
        class="x-titlebar">
                <div class="x-titlebar-left">
                    <a component="$UI/system/components/justep/button/button" label="" class="btn btn-link btn-only-icon" icon="icon-chevron-left"
            onClick="{operation:'window.close'}" xid="backBtn">
                        <i class="icon-chevron-left" />
                        <span></span>
                    </a>
                </div>
                <div class="x-titlebar-title">添加身份证</div>
                <div class="x-titlebar-right reverse"></div>
            </div>
        </div>
        <div class="x-panel-content content" xid="content1">
            <div class="all_list_all">
                <div class="all_list_left"> 姓名</div>
                <div class="all_list_right">
                    <input type="text" placeholder="请输入姓名" />
                </div>
            </div>
            <div class="all_list_all">
                <div class="all_list_left"> 身份证号</div>
                <div class="all_list_right">
                    <input type="text" placeholder="请输入身份证号" />
                </div>
            </div>
            <div class="all_list_all">
                <div class="all_list_left">生效日期</div>
                <div class="all_list_right">
                    <input  id="start_date"  readonly="readonly" type="text" placeholder="请选择生效日期" />
                </div>
            </div>
            <div class="all_list_all">
                <div class="all_list_left">失效日期</div>
                <div class="all_list_right">
                    <input id="end_date" readonly="readonly" type="text" placeholder="请选择失效日期" />
                </div>
            </div>
            <div class="all_list_all">
                <div class="all_list_left">民族</div>
                <div class="all_list_right">
                    <input type="text" placeholder="请选择民族" />
                </div>
            </div>
            <div class="all_list_all">
                <div class="all_list_left">地址</div>
                <div class="all_list_right">
                    <input type="text" placeholder="请输入地址" />
                </div>
            </div>
            <div class="all_list_all">
                <div class="all_list_left">签发机构</div>
                <div class="all_list_right">
                    <input type="text" placeholder="请输入签发机构" />
                </div>
            </div>
            <div class="middle_content">
                <div>
                    <span>证件照片</span>
                </div>
                <div class="zjimg_content">
                    <div class="zjimg">
                        <img src="../../../img/u29.png" alt=""/> <br />
                        <span>上传证件正面照片</span>
                    </div>
                    <div class="zjimg">
                        <img src="../../../img/u29.png" alt=""/> <br />
                        <span>上传证件反面照片</span>
                    </div>
                </div>          
            </div>

            <div class="down_content">
               <div class="btnsure">确认添加</div>
            </div>
        </div>
    </div>
</div>